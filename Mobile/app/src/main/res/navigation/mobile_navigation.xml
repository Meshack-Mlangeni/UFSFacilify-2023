<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="mncedisi.mlangeni.myrecapp.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_book"
        android:name="mncedisi.mlangeni.myrecapp.ui.book.BookingFragment"
        android:label="Book a facility"
        tools:layout="@layout/fragment_booking" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="mncedisi.mlangeni.myrecapp.ui.notifications.NotificationFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="mncedisi.mlangeni.myrecapp.ui.profile.ProfileFragment"
        android:label="Manage profile"
        tools:layout="@layout/fragment_profile" />

</navigation>