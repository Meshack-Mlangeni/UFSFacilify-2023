<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".ui.book.CancelActivity">

    <TextView
        android:id="@+id/txtPFail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/hind"
        android:text="Booking Failed"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#9F1D30"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/imgfail"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/txtPFail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:src="@drawable/paymentfail" />

    <TextView
        android:id="@+id/txtBookingUnSuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgfail"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:fontFamily="@font/hind"
        android:text="Booking was unsuccessful. Please try again later, if the problem persist contact system administrator"
        android:textAlignment="center"
        android:textColor="#E91E1E"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFailReturnToHomePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtBookingUnSuccess"
        android:layout_marginTop="25dp"
        android:text="Return to facilities" />

</RelativeLayout>