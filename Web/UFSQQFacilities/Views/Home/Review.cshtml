@model Review
@{
    ViewBag.Title = "Facilify - Reviews";
}


<main>
    <div class="mt-4 mb-4">
        <h4 class="mt-3">Review facility</h4>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="btn-close"
                    data-bs-dismiss="alert" aria-label="Close">
            </button>
            @TempData["Message"]
        </div>
    }

    <form asp-action="Review" asp-controller="Home" method="post">
        <input type="hidden" asp-for="FacilityId" />
        <input type="hidden" asp-for="UserEmail"/>

        <div class="form-group mb-3">
            <label class="text-uppercase fw-semibold text-dark-emphasis" asp-for="Comment"></label>
            <textarea class="form-control" autocomplete="off"
                      placeholder="Enter facility description" asp-for="Comment"></textarea>
        </div>

        <div class="form-group mb-3">
            <label class="text-uppercase fw-semibold text-dark-emphasis" asp-for="Rating"></label>
            <input class="form-range bg-dark-subtle bg-gradient" type="range" min="0" max="5" asp-for="Rating" />
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-dark btn-sm shadow-sm">
                <span class="fa fa-plus"></span>
                Save rating
            </button>
            <br /><br />
            <a asp-action="Facility" asp-controller="Home">
                Cancel
            </a>

        </div>

    </form>
</main>