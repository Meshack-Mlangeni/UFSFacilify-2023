@model IQueryable<Transaction>
@{
    ViewBag.Title = "Facilify - See Transactions";
}


<main>
    <div class="mt-4">
        <h2 class="text-muted">Payment transaction(s)</h2>

        @if (Model.Count() > 0)
        {
            <br />

            <table class="table table-danger table-striped table-bordered table-hover table-sm shadow-sm">
                <thead>
                    <tr>
                        <th>User email</th>
                        <th>Payment Date</th>
                        <th>Payment status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model)
                    {
                        <tr>
                            <td>@transaction.UserEmail</td>
                            <td>@transaction.Date.ToShortDateString()</td>
                            <td>@(transaction.Success ? "Success" : "Failed")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <br />
            <h3 class="text-danger">No payment was made</h3>
        }

    </div>
</main>